@model Childcare.Models.Child
@{
    
    ViewBag.Title = "MyViewHelper1";
}

<h2>MyViewHelper1</h2>
@using (Html.BeginForm("ActionName", "ControllerName", FormMethod.Post))
{
    <table align="center" border="1">
        <caption style="color:red; font-size:16px">Course Form</caption>
        <tr>
            <td>@Html.Label("Child Id")</td>
            <td>@Html.Editor("childid", null, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>@Html.Label("Child Name")</td>

            <td>@Html.Editor("childname", null, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>@Html.Label("Child DOB")</td>

            <td>@Html.Editor("childdob", null, new { @class = "form-control" })</td>
        </tr>

        <tr>

            <td colspan="2"><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}


